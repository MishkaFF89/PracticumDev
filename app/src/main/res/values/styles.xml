<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/leaf</item>
        <item name="titleCentered">true</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text</item>
        <item name="fontFamily">@font/officinasansextraboldscc</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/leaf</item>
        <item name="colorSwitchThumbNormal">@color/leaf</item>
        <item name="android:colorForeground">@color/leaf</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SearchTabLayout">
        <item name="tabTextColor">@color/white_tab</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabBackground">@color/leaf</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="NewsCardTitle">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:fontFamily">@font/officinasansextraboldscc</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="CardButtonText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Link">
        <item name="android:textColorLink">@color/leaf</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="TextStyle11">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>